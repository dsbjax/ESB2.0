<UserControl x:Class="StatusBoard.MainStatusBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StatusBoard"
             mc:Ignorable="d">
    <DockPanel Margin="5">
        <local:EquipmentOutagesStatusBoard x:Name="outages" DockPanel.Dock="Right"/>
        <local:StaticEquipmentStatusBoard x:Name="statusBar" DockPanel.Dock="Top"/>
        <local:DynamicEquipmentStatusBoard/>
    </DockPanel>

</UserControl>
