<Window x:Class="Database.DatabaseControls.ConfirmDeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database.DatabaseControls"
        mc:Ignorable="d" Style="{StaticResource DialogWindow}" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle Style="{StaticResource DialogBackground}"/>
        <StackPanel Margin="25">
            <TextBlock Text="Confirm Delete" HorizontalAlignment="Center"/>
            <UniformGrid Columns="2" Width="250" Height="30">
                <Button Style="{StaticResource LabelButton}" Content="No" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonClick"/>
                <Button Style="{StaticResource LabelButton}" Content="Yes" 
                        HorizontalAlignment="Center" VerticalAlignment="Center" Click="ButtonClick"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Window>
