<UserControl x:Class="ApplicationManagementConsole.ReportViewPrintControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ApplicationManagementConsole"
             mc:Ignorable="d">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Style="{StaticResource LabelButton}" 
                Content="Print Report" Margin="5" HorizontalAlignment="Center" Click="PrintReportClick"/>
        <RichTextBox x:Name="previewArea" Margin="15" IsReadOnly="True"/>
    </DockPanel>
</UserControl>
