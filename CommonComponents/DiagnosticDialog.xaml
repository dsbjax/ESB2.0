<Window x:Class="CommonComponents.DiagnosticDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommonComponents"
        mc:Ignorable="d"
        Title="Diagnostic Dialog" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock x:Name="text" HorizontalAlignment="Center"/>
        <Button IsDefault="True" Content="Close" Click="Button_Click"/>
    </StackPanel>
</Window>
